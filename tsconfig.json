{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2021", "DOM"],
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declarationDir": "types",
    "declaration": true
  },
  "include": ["./src/**/*.js", "index.d.ts"],
  "exclude": ["node_modules"]
}
